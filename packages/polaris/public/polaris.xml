<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE visualization SYSTEM "../../visualization.dtd">
<visualization name="Polaris" embeddable="true">
    <description>Run YAML-Agents in Polaris format</description>
    <data_sources>
        <data_source>
            <model_class>HistoryDatasetAssociation</model_class>
            <test test_attr="ext">txt</test>
        </data_source>
    </data_sources>
    <params>
        <param required="false">dataset_id</param>
    </params>
    <entry_point src="index.js" css="index.css" />
    <specs>
        <ai_prompt><![CDATA[
            Select tools.
        ]]></ai_prompt>
        <ui>
            <chat>true</chat>
        </ui>
    </specs>
    <settings>
        <input>
            <label>Agent</label>
            <help>Pick an agent.</help>
            <name>agent</name>
            <type>select</type>
            <value>report_generator</value>
            <data>
                <data>
                    <label>History Explorer</label>
                    <value>history_explorer</value>
                </data>
                <data>
                    <label>Report Generator</label>
                    <value>report_generator</value>
                </data>
            </data>
        </input>
    </settings>
    <help format="markdown"><![CDATA[
]]></help>
</visualization>